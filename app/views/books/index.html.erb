<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td> <% @books.each do |book| %> </td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book)%></td>
      <td><%= link_to "Edit", edit_book_path(book)%></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm"=>"本当に削除しますか"%></td>
      <% end %>  
    </tr>    
  </tbody>
</table>

<% #新規投稿画面 %>
<h2>New book</h2>

<form class= "new_books">
  <div class="field">
    <%= form_with model: @book do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :body %>
      <%= f.text_area :body %>
      <%= f.submit '投稿' %>
    <% end %>
  </div>

</form>