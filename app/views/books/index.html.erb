<h1>Books</h1>

<table class="is_border">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book)%></td>
      <td><%= link_to "Edit", edit_book_path(book)%></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm"=>"本当に削除しますか"%></td>
      <% end %>  
    </tr>    
  </tbody>
</table>

<% #新規投稿画面 %>
<h2>New book</h2>


  <div class="field">
    <%= form_with model: @book do |f| %>
      
    <div class = "field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class = "field">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>

    <div class = "actions">
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
  </div>