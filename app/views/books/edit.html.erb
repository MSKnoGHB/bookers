<h1>Editing Book</h1>

  <%= form_with model: @book, method: :patch do |f| %>

    <div class = "field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class = "field">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>

    <div class = "actions">
      <%= f.submit "Update Book" %>
    </div> 

  <% end %>

<div class="navigation-links">
  <%= link_to "Show", book_path(@book)%>
  <text>|</text>
  <%= link_to "Back", books_path %>
</div>